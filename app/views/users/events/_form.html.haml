.row.justify-content-center
  .col-md-7
    = simple_form_for([:users, event]) do |f|
      .form-inputs
        = f.input :title, autofocus: true
        = f.input :description, as: :text, input_html: { rows: 5 }
        = f.input :started_at, as: :datetime, html5: true
        = f.input :venue
        = f.association :category, collection: Category.default_order

      .form-actions.text-center.mt-3
        = f.button :submit, class: 'btn btn-outline-primary'
        = link_to 'キャンセルする', root_path, class: 'btn btn-link'
